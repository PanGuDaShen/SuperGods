<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/white"
    android:paddingLeft="@dimen/x100"
    android:paddingRight="@dimen/x100"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <TextView
            android:id="@+id/id_main_tv_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ntlTabDistributeEvenly"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"/>

        <com.kyleduo.switchbutton.SwitchButton
            android:id="@+id/id_main_sb_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:checked="false"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/id_main_tv_3"
            app:layout_constraintTop_toTopOf="@+id/id_main_tv_3"
            app:layout_constraintBottom_toBottomOf="@+id/id_main_tv_3"
            app:layout_constraintHorizontal_bias="0.95"/>


</android.support.constraint.ConstraintLayout>